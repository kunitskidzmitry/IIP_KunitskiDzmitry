<Window x:Class="ShowABook_Simple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowABook_Simple"
        mc:Ignorable="d"
        Title="Show a book (Simple)" Height="226" Width="320">
    <Grid>
        <Label Content="ISBN" HorizontalAlignment="Left" Margin="32,33,0,0" Width="40"
               VerticalAlignment="Top" FontSize="14" Background="LightGray"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,38,0,0"
                   Name="isbnTextBlock" FontSize="14"
                   VerticalAlignment="Top" Text="ISBN_TEXTBLOCK"/>
        <Label Content="Title" HorizontalAlignment="Left" Margin="32,69,0,0" Width="40"
            VerticalAlignment="Top" FontSize="14" Background="LightGray"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,74,0,0"
            x:Name="titleTextBlock" FontSize="14"
            VerticalAlignment="Top" Text="TITLE_TEXTBLOCK"/>
        <Button Content="Show" HorizontalAlignment="Left" Margin="32,150,0,0"
                VerticalAlignment="Top" Width="75" Name="showButton"
                Click="showButton_Click"/>

    </Grid>
</Window>
